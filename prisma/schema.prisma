generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          Int               @id @default(autoincrement())
  nombre      String
  correo      String            @unique
  clave       String
  descripcion String?

  correosEnviados Correo[] @relation("Emisor")
  correosRecibidos ReceptorCorreo[]
  bloqueados       UsuarioBloqueado[] @relation("BloqueadorRelation")
  bloqueadores     UsuarioBloqueado[] @relation("BloqueadoRelation")
}

model Correo {
  id         Int              @id @default(autoincrement())
  emisorId   Int
  contenido  String
  favorito   Boolean

  emisor     Usuario          @relation("Emisor", fields: [emisorId], references: [id])
  receptores ReceptorCorreo[]
}

model ReceptorCorreo {
  correoId  Int
  usuarioId Int

  correo  Correo  @relation(fields: [correoId], references: [id])
  usuario Usuario @relation(fields: [usuarioId], references: [id])

  @@unique([correoId, usuarioId])
}

model UsuarioBloqueado {
  bloqueadorId  Int
  bloqueadoId   Int

  bloqueador Usuario @relation("BloqueadorRelation", fields: [bloqueadorId], references: [id])
  bloqueado  Usuario @relation("BloqueadoRelation", fields: [bloqueadoId], references: [id])

  @@unique([bloqueadorId, bloqueadoId])
}