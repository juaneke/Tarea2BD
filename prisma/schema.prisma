generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id_usuario  Int               @id @default(autoincrement())
  nombre      String
  correo      String            @unique
  clave       String
  descripcion String
}

model Correo {
  id_correo  Int              @id @default(autoincrement())
  id_emisor  Int
  contenido  String
  favorito   Boolean

  Emisor     Usuario          @relation("Emisor", fields: [id_emisor], references: [id_usuario])
  receptores ReceptorCorreo[]
}

model ReceptorCorreo {
  correoId Int
  usuarioId Int

  correo  Correo  @relation(fields: [correoId], references: [id_correo])
  usuario Usuario @relation(fields: [usuarioId], references: [id_usuario])
}

model UsuarioBloqueado {
  bloqueadorId  Int
  bloqueadoId   Int

  bloqueador Usuario @relation("Bloqueador", fields: [bloqueadorId], references: [id_usuario])
  bloqueado  Usuario @relation("Bloqueado", fields: [bloqueadoId], references: [id_usuario])

  @@unique([bloqueadorId, bloqueadoId])
}