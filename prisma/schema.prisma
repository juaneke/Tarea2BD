generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          Int               @id @default(autoincrement())
  nombre      String
  correo      String            @unique
  clave       String
  descripcion String?

  correosEnviados Correo[] @relation("Emisor")
  correosRecibidos ReceptorCorreo[]
  bloqueados       UsuarioBloqueado[] @relation("BloqueadorRelation")
  bloqueadores     UsuarioBloqueado[] @relation("BloqueadoRelation")
}

model Correo {
  id         Int              @id @default(autoincrement())
  emisor_correo   String
  contenido  String
  favorito   Boolean

  emisor     Usuario          @relation("Emisor", fields: [emisor_correo], references: [correo])
  receptores ReceptorCorreo[]
}

model ReceptorCorreo {
  correoId  Int
  receptor String

  correo  Correo  @relation(fields: [correoId], references: [id])
  usuario Usuario @relation(fields: [receptor], references: [correo])

  @@unique([correoId, receptor])
}

model UsuarioBloqueado {
  bloqueadorCorreo  String
  bloqueadoCorreo   String

  bloqueador Usuario @relation("BloqueadorRelation", fields: [bloqueadorCorreo], references: [correo])
  bloqueado  Usuario @relation("BloqueadoRelation", fields: [bloqueadoCorreo], references: [correo])

  @@unique([bloqueadorCorreo, bloqueadoCorreo])
}